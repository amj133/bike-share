
<div class="text-box">
  <%= form_tag(login_path, class: "form") do %>
    <div class="form-field">
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </div>

    <div class="form-field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <%= submit_tag "Log in" %>
  <% end %>
</div>

<h3>Edit Accessory</h3>

<%= form_for(["admin", @accessory]) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br><br>

  <%= f.label :price %>
  <%= f.number_field :price %><br><br>

  <%= f.label :status %>
  <%= select(:accessory, :status, options_for_select([['active', 'active'], ['inactive', 'inactive']])) %><br><br>

  <%= f.submit %>
<% end %>

<h2> Edit Stations </h2>

<%= form_for [:admin, @station] do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "Name of station*" %><br><br>
        <%= f.label :lat %>
        <%= f.text_field :lat, placeholder: "Latitude*" %><br><br>
        <%= f.label :long %>
        <%= f.text_field :long, placeholder: "Longitude*" %><br><br>
        <%= f.label :dock_count %>
        <%= f.text_field :dock_count, placeholder: "Dock count*" %><br><br>
        <%= f.label :city %>
        <%= f.text_field :city, placeholder: "City*" %><br><br>
        <%= f.label :installation_date %>
        <%= f.text_field :installation_date, placeholder: "Installation date*" %><br><br>
        <%= f.hidden_field :slug %>
        <%= f.submit class: "sub-btn" %>

        <% end %>

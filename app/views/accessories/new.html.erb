<h3>Create a new accessory</h3>

<%= form_for(@accessory) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :status %>
  <%= select(:accessory, :status, options_for_select([['active', 'active'], ['inactive', 'inactive']])) %><br><br>

  <%= f.hidden_field :image_path, :value => 'bike.png' %>

  <%= f.submit %>
<% end %>

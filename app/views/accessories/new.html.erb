<div class="form new-form">
  <h3>Create a new accessory</h3>

  <%= form_for(@accessory) do |f| %>
  <div class="form-field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>
  <div class="form-field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <%= f.label :status %>
  <%= select(:accessory, :status, options_for_select([['active', 'active'], ['inactive', 'inactive']])) %><br><br>

  <%= f.hidden_field :image_path, :value => 'bike.png' %>

  <%= f.submit %>
  <% end %>
</div>

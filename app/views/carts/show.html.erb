<div class="cart-show">
  <div class="">
    <h3>Accessories in your cart</h3>
    <h3>Cart Total: <%= @cart.total_cost %></h3>
  </div>

  <div class="show-cart">
    <% @accessories.each do |accessory| %>
      <%= accessory.name %><br>
      <%= accessory.description %><br>
      <%= image_tag(accessory.image_path, class: 'accessory-image') %>
      <p>Unit Price: <%= accessory.price %></p>
      <p>Quantity: <%= @cart.count_of(accessory.id) %></p>
      <p>Subtotal: <%= @cart.count_of(accessory.id) * accessory.price %></p>
      <%= button_to "Increase quantity", increase_quantity_path(accessory_id: accessory.id), method: :patch %>
      <%= button_to "Decrease quantity", decrease_quantity_path(accessory_id: accessory.id), method: :patch %>
      <%= button_to "remove", remove_accessory_path(accessory_id: accessory.id), method: :patch %>
    <% end %>
  </div>

  <div class="">
    <%= button_to "Checkout", orders_path %>
  </div>
</div>

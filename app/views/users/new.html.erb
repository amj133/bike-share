
<div class="text-box">
  <%= form_for @user, html: {:class => "form"} do |f| %>
   <div class="form-field">
     <%= f.label :username %>
     <%= f.text_field :username %>
   </div>

   <div class="form-field">
     <%= f.label :email %>
     <%= f.text_field :email %>
   </div>

   <div class="form-field">
     <%= f.label :password %>
     <%= f.password_field :password %>
   </div>

    <%= f.submit "Submit" %>
    <% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <br>
   <% end %>
   <% end %>
  <% end %>
</div>

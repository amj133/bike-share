<div class="text-box">
  <h3>Create A New Account</h3>
  <%= form_for @user, html: {:class => "form"} do |f| %>
   <div class="form-field">
     <%= f.label :username %>
     <%= f.text_field :username, placeholder: "*required" %>
   </div>

   <div class="form-field">
     <%= f.label :email %>
     <%= f.text_field :email, placeholder: "*required" %>
   </div>

   <div class="form-field">
     <%= f.label :first_name %>
     <%= f.text_field :first_name, placeholder: "*required to checkout" %>
   </div>

   <div class="form-field">
     <%= f.label :last_name %>
     <%= f.text_field :last_name, placeholder: "*required to checkout" %>
   </div>

   <div class="form-field">
     <%= f.label :street %>
     <%= f.text_field :street, placeholder: "*required to checkout" %>
   </div>

   <div class="form-field">
     <%= f.label :city %>
     <%= f.text_field :city, placeholder: "*required to checkout" %>
   </div>

   <div class="form-field">
     <%= f.label :state %>
     <%= f.select :state,     [
      ['Alabama', 'AL'],
      ['Alaska', 'AK'],
      ['Arizona', 'AZ'],
      ['Arkansas', 'AR'],
      ['California', 'CA'],
      ['Colorado', 'CO'],
      ['Connecticut', 'CT'],
      ['Delaware', 'DE'],
      ['District of Columbia', 'DC'],
      ['Florida', 'FL'],
      ['Georgia', 'GA'],
      ['Hawaii', 'HI'],
      ['Idaho', 'ID'],
      ['Illinois', 'IL'],
      ['Indiana', 'IN'],
      ['Iowa', 'IA'],
      ['Kansas', 'KS'],
      ['Kentucky', 'KY'],
      ['Louisiana', 'LA'],
      ['Maine', 'ME'],
      ['Maryland', 'MD'],
      ['Massachusetts', 'MA'],
      ['Michigan', 'MI'],
      ['Minnesota', 'MN'],
      ['Mississippi', 'MS'],
      ['Missouri', 'MO'],
      ['Montana', 'MT'],
      ['Nebraska', 'NE'],
      ['Nevada', 'NV'],
      ['New Hampshire', 'NH'],
      ['New Jersey', 'NJ'],
      ['New Mexico', 'NM'],
      ['New York', 'NY'],
      ['North Carolina', 'NC'],
      ['North Dakota', 'ND'],
      ['Ohio', 'OH'],
      ['Oklahoma', 'OK'],
      ['Oregon', 'OR'],
      ['Pennsylvania', 'PA'],
      ['Puerto Rico', 'PR'],
      ['Rhode Island', 'RI'],
      ['South Carolina', 'SC'],
      ['South Dakota', 'SD'],
      ['Tennessee', 'TN'],
      ['Texas', 'TX'],
      ['Utah', 'UT'],
      ['Vermont', 'VT'],
      ['Virginia', 'VA'],
      ['Washington', 'WA'],
      ['West Virginia', 'WV'],
      ['Wisconsin', 'WI'],
      ['Wyoming', 'WY']
    ].map {|s| [s.first, s.last]}, prompt: "Choose A State" %>
   </div>

   <div class="form-field">
     <%= f.label :zipcode %>
     <%= f.number_field :zipcode, maxlength: 2, placeholder: "*required to checkout" %>
   </div>

   <div class="form-field">
     <%= f.label :password %>
     <%= f.password_field :password, placeholder: "*required" %>
   </div>

    <%= f.submit "Submit" %>
  <% end %>
</div>
